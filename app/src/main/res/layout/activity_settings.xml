<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/Heading_Sigup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        android:layout_marginVertical="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Heading_Sigup"
        tools:layout_editor_absoluteX="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Email"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emailEdtSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/my_font_roboto_thin"
            android:hint="loading..."
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:enabled="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/nameEditSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/my_font_roboto_thin"
            android:hint="loading..."
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:enabled="false"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Roll No"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rollEditSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/my_font_roboto_thin"
            android:hint="loading..."
            android:inputType="number"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:enabled="false"
            android:textColorHint="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Collage Id"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/collageIdEditSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/my_font_roboto_thin"
            android:hint="loading..."
            android:inputType="textPersonName"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:enabled="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/EditBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/blue_"
            android:fontFamily="@font/my_font_roboto"
            android:gravity="center"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginVertical="10dp" />




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_button_setings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/back_button"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/Heading_Sigup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBarProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/SignoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/SignoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@color/blue_"
        android:fontFamily="@font/my_font_roboto"
        android:gravity="center"
        android:text="Signout"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@+id/DeleteAccBtn" />

    <Button
        android:id="@+id/DeleteAccBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@color/red_"
        android:fontFamily="@font/my_font_roboto"
        android:gravity="center"
        android:text="Delete Account"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>